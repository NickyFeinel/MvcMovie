@{
    ViewData["Title"] = "Bienvenida";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white text-center">
                    <h2>@ViewData["Title"]</h2>
                </div>
                <div class="card-body text-center">
                    <p class="lead">@ViewBag.Mensaje</p>

                    <a href="/Movies/Index" class="btn btn-success mt-3">Ir al listado de películas</a>
                    <a href="/Login/Logout" class="btn btn-outline-danger mt-3 ms-2">Cerrar sesión</a>
                </div>
            </div>
        </div>
    </div>
</div>
