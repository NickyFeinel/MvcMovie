@{
	ViewBag.Title = "Login"; // Acá se almacenan cosas
	Layout = null;
	<h2>Login</h2> //etiqueta html standard (Especie de título)

}

@using (Html.BeginForm())
{
	<p>Usuario: @Html.TextBox("username")</p> //párrafo
	<p>Contraseña: @Html.TextBox("password")</p>
	<input type ="submit" value="Ingresar"> // Este comando es un botón, dentro de él, submit se encarga de mandarle esta información al controlador y Value es lo que va a decir el botón.
}

@if(ViewBag.Error != null)
{
	<p style="color: red">@ViewBag.Error</p> //el style es css para ponerle color o algún detalle
}